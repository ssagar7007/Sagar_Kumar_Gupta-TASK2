<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/booking.css">
</head>
<body>
  <% if(message){ %>
     <h2>Invalid User</h2>
  <%}else{%>     
  <!-- navbar -->
        <nav class="navbar bg-body-tertiary">
            <div class="container-fluid">
              <a class="navbar-brand" href="http://localhost:3000">
                <img src="/image/icon.jpg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                <b>Home</b>
              </a>
              <div id="show_customer_detail">
                Name :-
                <span> <%= info.customer_name %></span>
                Email :-
                <span> <%= info.email %></span>
                Phone :-
                <span><%= info.phone_number %></span>
                Address :-
                <span><%= info.address %></span>
                Customer ID :-
                <span><%= info.customer_id %></span>
                <button id="edit_customer_detail_btn">Edit Customer Detail</button>
               </div>
              
            </div>
          </nav>
        <!-- navbar end -->

        <h3>Booking details</h3>
        <div id="holder"></div>
    <button id="new_book">Book New Drone Shots</button>
    <table>
      <tr>
        <th>Booking ID</th>
        <th>Location ID</th>
        <th>Drone Shot ID</th>
        <th>Created Time</th>
        <th>Booking Date</th>
        <!-- <th></th>
        <th></th> -->
      </tr>
      <% info2.forEach(function(data){ %>
          <tr id="<%= data.booking_id %>">
            <td> <%= data.booking_id %></td>
            <td> <%= data.location_id %></td>
            <td> <%= data.drone_shot_id %></td>
            <td> <%= data.created_time %></td>
            <td> <%= data.booking_date %></td>
            <td><button class="edit">Edit</button></td>
            <td><button class="delete">Delete</button></td>
          </tr>
      <% }) %>
     
    </table>
  <% } %>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
<script src="/js/booking.js"></script>
</html>